<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.basketapp.NewMatchActivity"
    android:orientation="vertical"
    android:background="#3D4352">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#313848"
        android:layout_margin="@dimen/normal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match data"
            android:textSize="@dimen/big_sized_letters"
            android:textColor="#8adfdc"
            android:layout_margin="@dimen/normal_margin"
            />

        <EditText
            android:id="@+id/et_nombre_equipo1"
            android:layout_width= "280dp"
            android:layout_height="wrap_content"
            android:hint="team 1"
            android:textColor="#8adfdc"
            android:textColorHint="#8adfdc"
            android:layout_margin="5dp"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/et_nombre_equipo2"
            android:layout_width= "280dp"
            android:layout_height="wrap_content"
            android:hint="team 2"
            android:layout_margin="5dp"
            android:inputType="text"
            android:textColor="#8adfdc"
            android:textColorHint="#8adfdc"/>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_hora_horas"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="horas"
                android:layout_margin="5dp"
                android:inputType="number"
                android:textColor="#8adfdc"
                android:textColorHint="#8adfdc"/>
            <TextView
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_margin="5dp"
                android:text=":"
                android:textColor="#8adfdc"/>
            <EditText
                android:id="@+id/et_hora_minutos"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="minutos"
                android:layout_margin="5dp"
                android:inputType="number"
                android:textColor="#8adfdc"
                android:textColorHint="#8adfdc"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_fecha_dia"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DD"
                android:layout_margin="5dp"
                android:inputType="number"
                android:textColor="#8adfdc"
                android:textColorHint="#8adfdc"/>
            <EditText
                android:id="@+id/et_fecha_mes"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="MM"
                android:layout_margin="5dp"
                android:inputType="number"
                android:textColor="#8adfdc"
                android:textColorHint="#8adfdc"/>
            <EditText
                android:id="@+id/et_fecha_anio"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YY"
                android:layout_margin="5dp"
                android:inputType="number"
                android:textColor="#8adfdc"
                android:textColorHint="#8adfdc"
                />

        </LinearLayout>


        <Button
            android:id="@+id/bt_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:inputType="text"
            android:background="#8adfdc"
            android:layout_margin="@dimen/normal_margin"/>


    </LinearLayout>


</ScrollView>