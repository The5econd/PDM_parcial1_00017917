<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="#735372"
    android:layout_margin="@dimen/normal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nombre_de_equipos_en_lista"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_margin"
            android:textSize="@dimen/normal_sized_letters"
            android:hint="prueba"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="#8f758e">
        <TextView
            android:id="@+id/score_en_lista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/normal_margin"
            android:hint="prueba"
            android:textSize="@dimen/small_sized_letters"/>
        <TextView
            android:id="@+id/terminado_en_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint=""
            android:textSize="@dimen/small_sized_letters"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="#8f758e">
        <TextView
            android:id="@+id/hora_partido_en_lista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/normal_margin"
            android:hint="prueba"
            android:textSize="@dimen/small_sized_letters"/>
        <TextView
            android:id="@+id/fecha_partido_en_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint=""
            android:textSize="@dimen/small_sized_letters"
            />
    </LinearLayout>


</LinearLayout>